{
  "name": "uk-waste-management-system",
  "version": "1.0.0",
  "description": "UK Waste Management Compliance System with traceability and circular economy features",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "jest",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "waste-management",
    "uk-compliance",
    "traceability",
    "circular-economy",
    "packaging"
  ],
  "author": "UK Waste Management System",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3"
  }
}